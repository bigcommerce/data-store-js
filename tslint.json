{
    "extends": "tslint:recommended",
    "rules": {
        "interface-name": [
            true,
            "never-prefix"
        ],
        "max-line-length": false,
        "member-access": [
            true,
            "no-public"
        ],
        "ordered-imports": [
            true,
            {
                "grouped-imports": true,
                "import-sources-order": "lowercase-first",
                "named-imports-order": "lowercase-first"
            }
        ],
        "quotemark": [
            true,
            "single"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "arrays": "always",
                    "functions": "never",
                    "objects": "always",
                    "typeLiterals": "always"
                }
            }
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore"
        ]
    }
}
